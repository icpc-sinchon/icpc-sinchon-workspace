{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "알고리즘 캠프 기록",
  "description": "신촌연합 알고리즘 캠프의 운영을 기록한 데이터 스키마",
  "definitions": {
    "person": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "이름"
        },
        "school": {
          "type": "string",
          "description": "소속 학교"
        },
        "bojHandle": {
          "type": "string",
          "description": "BOJ 아이디"
        }
      },
      "required": ["name", "school", "bojHandle"]
    }
  },
  "properties": {
    "year": {
      "type": "integer",
      "description": "알고리즘 캠프가 진행된 연도",
      "minimum": 2019
    },
    "season": {
      "type": "string",
      "description": "알고리즘 캠프가 진행된 계절(여름, 겨울 중 하나)",
      "enum": ["Winter", "Summer"]
    },
    "study": {
      "type": "array",
      "description": "알고리즘 캠프 난이도별 스터디",
      "items": {
        "type": "object",
        "properties": {
          "level": {
            "type": "string",
            "description": "스터디의 난이도"
          },
          "lecturer": {
            "type": "array",
            "description": "스터디의 강사",
            "items": {
              "$ref": "#/definitions/person"
            }
          },
          "mentor": {
            "type": "array",
            "description": "스터디의 멘토",
            "items": {
              "$ref": "#/definitions/person"
            }
          },
          "curriculum": {
            "type": "array",
            "description": "스터디의 커리큘럼",
            "items": {
              "type": "string",
              "description": "스터디의 회차별 주제",
              "minLength": 1,
              "maxLength": 100
            }
          }
        },
        "additionalProperties": false,
        "required": ["level", "lecturer", "curriculum"]
      }
    }
  },
  "required": ["year", "season", "study"]
}
