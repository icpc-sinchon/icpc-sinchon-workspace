{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,
    "noImplicitAny": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true
  }
}
